<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_mobile_list">

    <fragment
        android:id="@+id/navigation_mobile_list"
        android:name="com.android.espermobiles.view.MobileListFragment"
        android:label="@string/mobile_list"
        tools:layout="@layout/fragment_mobile_list" >
        <action
            android:id="@+id/action_navigation_mobile_list_to_navigation_selection"
            app:destination="@id/navigation_selection" />
    </fragment>

    <fragment
        android:id="@+id/navigation_selection"
        android:name="com.android.espermobiles.view.SelectionFragment"
        android:label="@string/selection"
        tools:layout="@layout/fragment_selection" >
        <action
            android:id="@+id/action_navigation_selection_to_navigation_summary"
            app:destination="@id/navigation_summary"
            app:popUpTo="@id/navigation_selection"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/navigation_summary"
        android:name="com.android.espermobiles.view.SummaryFragment"
        android:label="@string/summary"
        tools:layout="@layout/fragment_summary" >
        <action
            android:id="@+id/action_navigation_summary_to_navigation_mobile_list"
            app:destination="@id/navigation_mobile_list" />
    </fragment>
</navigation>